# GCC with no LTO
export CPPFLAGS_NOLTO="-D_FORTIFY_SOURCE=2 -O2" 
export CFLAGS_NOLTO="-march=x86-64 -mtune=core2 -O2 -pipe -fstack-protector-strong --param=ssp-buffer-size=4 -msse -msse2 -msse3 -fPIC -fno-lto -fuse-linker-plugin -Wno-error" 
export CXXFLAGS_NOLTO="-march=x86-64 -mtune=core2 -O2 -pipe -fstack-protector-strong --param=ssp-buffer-size=4 -msse -msse2 -msse3 -fPIC -fno-lto -fuse-linker-plugin -Wno-error" 
export LDFLAGS_NOLTO="-Wl,-O1,--sort-common,--as-needed,-z,relro -fPIC -fno-lto -fuse-linker-plugin" 

# GCC with LTO
export CPPFLAGS_LTO="-D_FORTIFY_SOURCE=2 -O2"
export CFLAGS_LTO="-march=x86-64 -mtune=core2 -O2 -pipe -fstack-protector-strong --param=ssp-buffer-size=4 -msse -msse2 -msse3 -fPIC -flto -fuse-linker-plugin -Wno-error"
export CXXFLAGS_LTO="-march=x86-64 -mtune=core2 -O2 -pipe -fstack-protector-strong --param=ssp-buffer-size=4 -msse -msse2 -msse3 -fPIC -flto -fuse-linker-plugin -Wno-error"
export LDFLAGS_LTO="-Wl,-O1,--sort-common,--as-needed,-z,relro -fPIC -flto -fuse-linker-plugin"

# Clang with no LTO
export CPPFLAGS_CLANG_NOLTO="-D_FORTIFY_SOURCE=2 -O2"
export CFLAGS_CLANG_NOLTO="-march=x86-64 -mtune=core2 -O2 -pipe -fstack-protector-strong --param=ssp-buffer-size=4 -msse -msse2 -msse3 -fPIC -fno-lto -Wno-error"
export CXXFLAGS_CLANG_NOLTO="-march=x86-64 -mtune=core2 -O2 -pipe -fstack-protector-strong --param=ssp-buffer-size=4 -msse -msse2 -msse3 -fPIC -fno-lto -Wno-error"
export LDFLAGS_CLANG_NOLTO="-Wl,-O1,--sort-common,--as-needed,-z,relro -fPIC -fno-lto"

# Clang with LTO
export CPPFLAGS_CLANG_LTO="-D_FORTIFY_SOURCE=2 -O2"
export CFLAGS_CLANG_LTO="-march=x86-64 -mtune=core2 -O4 -pipe -fstack-protector-strong --param=ssp-buffer-size=4 -msse -msse2 -msse3 -fPIC -Wno-error"
export CXXFLAGS_CLANG_LTO="-march=x86-64 -mtune=core2 -O4 -pipe -fstack-protector-strong --param=ssp-buffer-size=4 -msse -msse2 -msse3 -fPIC -Wno-error"
export LDFLAGS_CLANG_LTO="-Wl,-O1,--sort-common,--as-needed,-z,relro -fPIC -flto -fuse-linker-plugin"
