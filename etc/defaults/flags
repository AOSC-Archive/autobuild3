CPPFLAGS="-D_FORTIFY_SOURCE=2 -O2"
CFLAGS="-march=x86-64 -mtune=core2 -O2 -pipe -fstack-protector-strong --param=ssp-buffer-size=4 -msse2 -msse3 -fPIC -flto -fuse-linker-plugin -Wno-error"
CXXFLAGS="-march=x86-64 -mtune=core2 -O2 -pipe -fstack-protector-strong --param=ssp-buffer-size=4 -msse2 -msse3 -fPIC -flto -fuse-linker-plugin -Wno-error"
LDFLAGS="-Wl,-O1,--sort-common,--as-needed,-z,relro -fPIC -flto -fuse-linker-plugin"
ABMK="-j$(echo $(lscpu | grep ^CPU\(s\) | awk '{ print $2 }')*2+1 | bc) V=1"
